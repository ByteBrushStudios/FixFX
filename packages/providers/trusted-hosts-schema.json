{
  "$schema": "http://json-schema.org/draft-7/schema#",
  "title": "Trusted Hosts Schema",
  "description": "Schema for FiveM/RedM trusted hosting providers from official FiveM registry",
  "type": "object",
  "properties": {
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the list was last updated"
    },
    "source": {
      "type": "string",
      "const": "https://fivem.net/server-hosting",
      "description": "Official source URL"
    },
    "hosts": {
      "type": "array",
      "description": "Array of trusted hosting providers",
      "items": {
        "type": "object",
        "required": ["id", "name", "url"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique identifier (lowercase, alphanumeric and hyphens only)"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Display name of the hosting provider"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Website URL of the hosting provider"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Brief description of the provider"
          },
          "logo": {
            "type": "string",
            "format": "uri",
            "description": "URL to provider's logo image"
          },
          "verified": {
            "type": "boolean",
            "default": true,
            "description": "Whether this provider is currently verified on FiveM site"
          },
          "lastVerified": {
            "type": "string",
            "format": "date-time",
            "description": "When this provider was last verified to exist on FiveM site"
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    }
  },
  "required": ["lastUpdated", "source", "hosts"],
  "additionalProperties": false
}
